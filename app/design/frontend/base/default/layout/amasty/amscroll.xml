<layout version="1.0.0">
    <amasty_scroll_handle>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>css/amscroll.css</name>
            </action>
        </reference>
        <reference name="head">
            <action method="addJs">
                <name>amasty/amscroll/amscroll.js</name>
            </action>
        </reference>
        <reference name="content">
            <block type="amscroll/init" name="init" template="amasty/amscroll/init.phtml" before="-"/>
        </reference>
    </amasty_scroll_handle>

    <catalog_category_view>
        <update handle="amasty_scroll_handle"/>
    </catalog_category_view>

    <catalogsearch_result_index>
        <update handle="amasty_scroll_handle"/>
    </catalogsearch_result_index>

    <catalogsearch_advanced_result>
        <update handle="amasty_scroll_handle"/>
    </catalogsearch_advanced_result>

    <amshopby_index_index>
        <update handle="amasty_scroll_handle"/>
    </amshopby_index_index>

    <amlanding_page_view>
        <update handle="amasty_scroll_handle"/>
    </amlanding_page_view>

    <cms_page>
        <update handle="amasty_scroll_handle"/>
    </cms_page>

    <ambrands_index_view>
        <update handle="amasty_scroll_handle"/>
    </ambrands_index_view>
</layout> 
