<?xml version="1.0"?>
<config>
    <api>
        <resources>
            <faayaapi translate="title" module="faayaapi">
                <model>faayaapi/faayaapi_api</model>
                <title>Custom Faaya Import Data API</title>
                <methods>
                   <import translate="title" module="faayaapi">
                        <title>Custom Faaya Import Data API</title>
                   </import>
                </methods>
                <faults module="faayaapi">
                    <data_invalid>
                        <code>100</code>
                        <message>Invalid data</message>
                    </data_invalid>
                    <filters_invalid>
                        <code>101</code>
                        <message>Invalid filters specified. Details in error message.</message>
                    </filters_invalid>
                    <not_exists>
                        <code>102</code>
                        <message>Faayaapi not exists.</message>
                    </not_exists>
                    <not_deleted>
                        <code>103</code>
                        <message>Faayaapi not deleted. Details in error message.</message>
                    </not_deleted>
                </faults>
            </faayaapi>
          </resources>
          <acl>
              <resources>
                <faayaapi translate="title" module="faayaapi">
                      <title>Products</title>
                      <sort_order>5</sort_order>
                      <product translate="title" module="faayaapi">
                        <title>Faaya Import Product data</title>
                      </product>
                </faayaapi>
              </resources>
        </acl>
      </api>
</config>

